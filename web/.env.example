# SoloHack Web (Next.js) — .env.example

# Gemini API キー（サーバー側で使用）
# CLI互換: SOLOHACK_GEMINI_API_KEY または GOOGLE_API_KEY
SOLOHACK_GEMINI_API_KEY=
GOOGLE_API_KEY=

# Gemini モデル（任意。未設定時は gemini-1.5-flash）
# 例: gemini-1.5-pro / gemini-1.5-flash / （環境で利用可なら）gemini-2.0-***
SOLOHACK_GEMINI_MODEL=

# Supabase（Next.js クライアント用公開キー）
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# ストリーム出力の既定（クライアントUI向け）
SOLOHACK_STREAM_DEFAULT=stream
SOLOHACK_STREAM_DELAY_MS=40

# 相棒の名前・口調（CLI互換のキー名も許容）
SOLOHACK_ASSISTANT_NAME=
SOLOHACK_ASSISTANT_TONE=丁寧・前向き・簡潔

# ストレージ（CLI互換のJSON保存先を共有）
# 省略時は web/ から見て ../storage を使用
SOLOHACK_STORAGE_DIR=
