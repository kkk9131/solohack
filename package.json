{
  "name": "solohack-cli",
  "version": "0.1.0",
  "description": "SoloHack CLI MVP for gamified solo development.",
  "license": "MIT",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "solohack": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:watch": "tsc --project tsconfig.json --watch",
    "clean": "rimraf dist",
    "dev": "tsx src/cli/index.ts",
    "dev:watch": "tsx watch src/cli/index.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ci": "vitest --run --coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --check src",
    "prepare": "husky install"
  },
  "keywords": [
    "solohack",
    "cli",
    "typescript"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "openai": "^4.56.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.16.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
